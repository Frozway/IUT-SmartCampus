{% extends 'base.html.twig' %}

{% block title %}Ajouter une Salle{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/adminDashboard.css') }}">

    {# Bouton Retour #}
    <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary back">Retour</a>
    
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Ajouter une Salle</h1>

                {{ form_start(form) }}
                
                <div class="form-group">
                    {{ form_label(form.name, 'Nom de la Salle') }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mt-3">
                    {{ form_label(form.floor, 'Ã‰tage') }}
                    {{ form_widget(form.floor, {'attr': {'class': 'form-control'}}) }}
                </div>

                {{ form_rest(form) }}

                <button type="submit" class="btn btn-primary btn-block mt-3">Enregistrer</button>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% set onRoomPage = app.request.attributes.get('_route') == 'app_room' %}

{% extends 'base.html.twig' %}

{% block title %}
    {% if onRoomPage %}
        Salle - {{ room.name }}
    {% else %}
        Acceuil | SmartCampus
    {% endif %}
{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/userDashboard.css') }}">
    <link rel="stylesheet" href="{{ asset('css/roomData.css') }}">
    
    <div>
    
        {% include 'components/navbar.html.twig' %}

        <div class="container-fluid">

            <div class="row listes">

                <!-- Liste des salles -->
                {% include 'components/roomList.html.twig' %}

                {% if onRoomPage %}
                    {% include 'components/default/userRoomDetails.html.twig' %}

                {% endif %}

            </div>

        </div>

    </div>


{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/adminDashboard.css') }}">
    

    <div class="page-wrapper d-inline-flex">

        <div class="sidebar">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" />
        </div>

        <div class="content" style="flex-grow: 1;">

        <h2><i class="fa-solid fa-house"></i> Tableau de bord</h2>

        {# Alertes #}
        <div class="flex">
            <div class="panel shadow">
                <span class="fs-5">Alertes</span>
                <div class="row px-2 mt-2">
                    <div class="alerte mt-2 mx-1 p-0 border-0">
                        {# TODO: Icon #}
                        <div class="icon-container p-2">
                            <img src="{{ asset('images/icon_carbon.png') }}" alt="" class="img-fluid">
                        </div>
                        <div class="room-name">D302</div>
                    </div>

                    <div class="alerte mt-2 mx-1 p-0 border-0">
                        {# TODO: Icon #}
                        <div class="icon-container p-2">
                            <img src="{{ asset('images/icon_temperature.png') }}" alt="" class="img-fluid">
                        </div>
                        <div class="room-name">D302</div>
                    </div>

                    <div class="alerte mt-2 mx-1 p-0 border-0">
                        {# TODO: Icon #}
                        <div class="icon-container p-2">
                            <img src="{{ asset('images/icon_humidity.png') }}" alt="" class="img-fluid">
                        </div>
                        <div class="room-name">D302</div>
                    </div>
                </div>
            </div>

            <div class="container m-0">
                <div class="row listes">
                    <div class="col panel shadow">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="fs-5">Salles</div>
                            <div>
                                <a href="{{ path('app_admin_add_room') }}" class="btn btn-custom-success"><i class="fa-solid fa-plus"></i> Ajouter</a>
                            </div>
                        </div>

                        <ul class="mt-3">
                            {{ form_start(form) }}
                            {{ form_label(form.SearchRoom) }}
                            {{ form_widget(form.SearchRoom) }}
                            <button type="button" class="btn btn-custom-success" data-bs-toggle="modal" data-bs-target="#FilterModal">+</button>
                            <div class="ModalDiv">
                                <div class="modal fade ChangeRoomModal" id="FilterModal" tabindex="-1" aria-labelledby="FilterModal" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                {{ form_label(form.Floor) }}
                                                {{ form_widget(form.Floor) }}
                                                {{ form_label(form.isAssigned) }}
                                                {{ form_widget(form.isAssigned) }}
                                                {{ form_label(form.SearchAS) }}
                                                {{ form_widget(form.SearchAS) }}
                                                {{ form_label(form.Valid) }}
                                                {{ form_widget(form.Valid, {'attr' : { 'class' : 'btn btn-custom-success'  }}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- Boucle pour afficher chaque salle -->


                            {% for room in rooms %}
                                {% if room.name == searchR or searchR == "NONE" or searchR is empty%}
                                    {% if room.floor == floor or room.floor == "NONE" or room.floor is empty%}
                                        {% if assigned == TRUE and room.getAcquisitionSystem() != null%}
                                            {% if room.getAcquisitionSystem().name == searchAS or room.getAcquisitionSystem() == null or searchAS is empty%}
                                                <a href="{{ path('app_admin_room', {'id': room.id}) }}" class="text-decoration-none">
                                                    <li class="d-flex justify-content-between">
                                                        <span  style="color:black;">
                                                            {{ room.name }}
                                                        </span>

                                                        {% if room.getAcquisitionSystem() is not null %}
                                                            <!-- Afficher le nom du système d'acquisition associé -->
                                                            ({{ room.getAcquisitionSystem().name }})
                                                        {% else %}
                                                            (Aucun système d'acquisition associé)
                                                        {% endif %}
                                                    </li>
                                                </a>
                                            {% endif %}
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>

                    <div class="col panel shadow">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="fs-5">Systemes d'aquisition</div>
                            <div>
                                <a href="{{ path('app_admin_add_acquisition_system', {'error': '0'}) }}" class="btn btn-custom-success"><i class="fa-solid fa-plus"></i> Ajouter</a>
                            </div>
                        </div>

                        <ul class="mt-3">
                            <!-- Boucle pour afficher chaque système d'acquisition -->
                            {% for acquisitionSystem in acquisitionSystems %}
                                <li class="acquisition-system d-flex justify-content-between align-items-center">
                                    <span>{{ acquisitionSystem.name }}</span>

                                    {% if acquisitionSystem.getRoom() is null %}
                                        <!-- Afficher "Non associé" si tel est le cas -->
                                        <div class="alert alert-warning m-0 px-2 p-1">
                                            <i class="fa-solid fa-triangle-exclamation"></i>
                                            (Non associé)
                                        </div>
                                    {% endif %}

                                    <button type="button" class="btn btn-custom-danger btn-sm float-right" style="width: auto;" data-toggle="modal" data-target="#confirmDeleteModal-{{ acquisitionSystem.id }}">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>

                                    <!-- Modal confirmation -->
                                    <div class="modal fade" id="confirmDeleteModal-{{ acquisitionSystem.id }}" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmation de suppression</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Êtes-vous sûr de vouloir supprimer ce système d'acquisition ?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-custom-secondary" data-dismiss="modal">Annuler</button>
                                                    <button type="button" class="btn btn-custom-danger" onclick="window.location.href = '{{ path('app_admin_delete_acquisition_system', {'id': acquisitionSystem.id}) }}'"><i class="fa-solid fa-trash-can"></i> Supprimer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>


                            {% endfor %}
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>


{% endblock %}

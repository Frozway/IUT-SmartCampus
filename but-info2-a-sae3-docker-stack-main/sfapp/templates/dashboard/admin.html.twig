{% extends 'base.html.twig' %}

{% block title %}Hello Admin{% endblock %}

{% block body %}

    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/adminDashboard.css') }}">

    <div class="page-wrapper d-inline-flex">

        <div class="sidebar">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" />
        </div>

        <div class="content" style="flex-grow: 1;">

            <h2>◩ Tableau de bord</h2>

        {# Alertes #}
        <div class="flex">
            <div class="panel shadow">
                Alertes
                <div class="row px-2 mt-2">
                    <div class="alerte mx-1 p-0 border-0 rounded">
                        {# TODO: Icon #}
                        <div class="icon-container p-2 rounded-start"></div>
                        <div class="room-name">D302</div>
                    </div>

                    <div class="alerte mx-1 p-0 border-0 rounded">
                        {# TODO: Icon #}
                        <div class="icon-container p-2 rounded-start"></div>
                        <div class="room-name">D302</div>
                    </div>

                    <div class="alerte mx-1 p-0 border-0 rounded">
                        {# TODO: Icon #}
                        <div class="icon-container p-2 rounded-start"></div>
                        <div class="room-name">D302</div>
                    </div>
                </div>
            </div>

            <div class="container m-0">
                <div class="row listes">
                    <div class="col panel shadow">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                Salles
                            </div>
                            <div>
                                <a href="{{ path('app_admin_add_room') }}" class="btn btn-success">Ajouter</a>
                            </div>
                        </div>

                        <ul class="mt-3">
                            <!-- Boucle pour afficher chaque salle -->
                            {% for room in rooms %}
                                <li>
                                    <a href="{{ path('app_admin_room', {'id': room.id}) }}">
                                        {{ room.name }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                    <div class="col panel shadow">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                Systemes d'aquisition
                            </div>
                            <div>
                                <a href="{{ path('app_admin_add_acquisition_system') }}" class="btn btn-success">Ajouter</a>
                            </div>
                        </div>

                        <ul class="mt-3">
                            <!-- Boucle pour afficher chaque système d'acquisition -->
                            {% for acquisitionSystem in acquisitionSystems %}
                                <li>{{ acquisitionSystem.name }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

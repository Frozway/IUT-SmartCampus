{% extends 'base.html.twig' %}

{% block title %}Ajouter une Salle{% endblock %}

{% block body %}

    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/adminDashboard.css') }}">

    <style>
        .custom-btn {
            border-radius: 10px;
            padding: 10px 20px;
            font-size: 18px;
            text-decoration: none;
        }

        .custom-btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .custom-btn-primary:hover {
            background-color: #0056b3;
        }

        .custom-btn-danger {
            background-color: #dc3545;
            color: #fff;
        }

        .custom-btn-danger:hover {
            background-color: #c82333;
        }

        .rounded-panel {
            border-radius: 15px;
            overflow: hidden;
        }
    </style>

    <div class="page-wrapper d-inline-flex">
        <div class="sidebar">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" />
        </div>

        <div class="content" style="flex-grow: 1;">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-lg-6 panel shadow">
                        <h1 class="text-center mb-4">Ajouter une Salle</h1>

                        {{ form_start(form) }}

                        <div class="form-group">
                            {{ form_label(form.name, 'Nom de la Salle') }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.floor, 'Ã‰tage') }}
                            {{ form_widget(form.floor, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        {{ form_rest(form) }}

                        <button type="submit" class="btn custom-btn custom-btn-primary btn-block mt-3">Enregistrer</button>
                        <a href="{{ path('app_admin_dashboard') }}" class="btn custom-btn custom-btn-danger btn-block mt-2">Annuler</a>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

{% endblock %}

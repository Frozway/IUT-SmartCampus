{% extends 'base.html.twig' %}

{% block title %}Hello Admin{% endblock %}

{% block body %}

    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/adminDashboard.css') }}">


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+Wy2nq4qYq70b6EGGoI1WqVj9afwwBIzj" crossorigin="anonymous">


    <div class="page-wrapper d-inline-flex">

        <div class="sidebar">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" />
        </div>

        <div class="content" style="flex-grow: 1;">

            <h2>◩ Tableau de bord</h2>

        {# Alertes #}
        <div class="flex">
            <div class="panel shadow">
                Alertes
                <div class="row px-2 mt-2">
                    <div class="alerte mx-1 p-0 border-0 rounded">
                        {# TODO: Icon #}
                        <div class="icon-container p-2 rounded-start"></div>
                        <div class="room-name">D302</div>
                    </div>

                    <div class="alerte mx-1 p-0 border-0 rounded">
                        {# TODO: Icon #}
                        <div class="icon-container p-2 rounded-start"></div>
                        <div class="room-name">D302</div>
                    </div>

                    <div class="alerte mx-1 p-0 border-0 rounded">
                        {# TODO: Icon #}
                        <div class="icon-container p-2 rounded-start"></div>
                        <div class="room-name">D302</div>
                    </div>
                </div>
            </div>

            <div class="container m-0">
                <div class="row listes">
                    <div class="col panel shadow">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                Salles
                            </div>
                            <div>
                                <a href="{{ path('app_admin_add_room') }}" class="btn btn-success">Ajouter</a>
                            </div>
                        </div>

                        <ul class="mt-3">
                            <!-- Boucle pour afficher chaque salle -->
                            {% for room in rooms %}
                                <li>
                                    <a href="{{ path('app_admin_room', {'id': room.id}) }}">
                                        {{ room.name }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                    <div class="col panel shadow">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                Systemes d'aquisition
                            </div>
                            <div>
                                <a href="{{ path('app_admin_add_acquisition_system') }}" class="btn btn-success">Ajouter</a>
                            </div>
                        </div>

                        <ul class="mt-3">
                            <!-- Boucle pour afficher chaque système d'acquisition -->
                            {% for acquisitionSystem in acquisitionSystems %}
                                <li class="d-flex justify-content-between align-items-center">
                                    <span>{{ acquisitionSystem.name }}</span>
                                    <button type="button" class="btn btn-danger btn-sm float-right" style="width: auto;" data-toggle="modal" data-target="#confirmDeleteModal">
                                        <i class="fas fa-trash-alt"></i> Supprimer
                                    </button>

                                    <!-- Modal confirmation -->
                                    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmation de suppression</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Êtes-vous sûr de vouloir supprimer ce système d'acquisitaion ?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                                    <button type="button" class="btn btn-danger" onclick="deleteAS()">Supprimer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <script>
                                        function deleteAS() {
                                            window.location.href = '{{ path('app_admin_delete_acquisition_system', {'id': acquisitionSystem.id}) }}';
                                        }
                                    </script>
                                </li>


                            {% endfor %}
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>


{% endblock %}

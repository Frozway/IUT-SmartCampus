<div class="panel shadow flex-grow-1">

    <h2 class="my-3 mt-4 font-weight-bold text-uppercase">{{ room.name }} - Étage {{ room.floor }}</h2>
    {# <a href="{{ path('app_user_dashboard }}" class="btn btn-custom-secondary back mr-3"><i class="fa-solid fa-left-long"></i> Retour</a> #}

    {# Afficher le contenu uniquement s'il y a un système d'acquisition associé #}
    {% if acquisitionSystem is not null %}
        {% if acquisitionSystem.isInstalled %}
            {% include 'components/currentRoomData.html.twig' %}
        {% else %}
            {# Afficher un message si le système est assigné mais pas installé #}
            <div class="alert alert-warning mt-3" role="alert">
                Les données seront prochainement disponible !
            </div>
        {% endif %} 

    {% endif %}

    <div>
        <p class="my-4 text-uppercase">vous constatez un problème ?</p>
        <a href="{{ path('app_submit_tech_notification') }}" class="p-4 my-2 rounded create-alert">
            <i class="fa-solid fa-triangle-exclamation fa-2xl"></i> ALERTER UN TECHNICIEN
        </a> 
    </div>

</div>
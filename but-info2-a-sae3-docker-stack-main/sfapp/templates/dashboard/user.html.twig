{% set onRoomPage = app.request.attributes.get('_route') == 'app_room' %}

{% extends 'base.html.twig' %}

{% block title %}
    {% if onRoomPage %}
        Salle - {{ room.name }}
    {% else %}
        Acceuil | SmartCampus
    {% endif %}
{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/userDashboard.css') }}">
    <link rel="stylesheet" href="{{ asset('css/roomData.css') }}">
    
    <div class="d-flex flex-column" style="height: 100vh">
    
        {% include 'components/navbar.html.twig' %}

        <div class="d-flex flex-grow-1 overflow-auto">
            {% include 'components/roomList.html.twig' %}

            {% if onRoomPage %}
                {% include 'components/default/userRoomDetails.html.twig' %}
                {% include 'components/externalData.html.twig' %}
            {% endif %}
        </div>

    </div>


{% endblock %}
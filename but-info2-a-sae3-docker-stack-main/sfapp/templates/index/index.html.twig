{% extends 'base.html.twig' %}

{% block title %}Acceuil | SmartCampus{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/styles.css') }}">
<link rel="stylesheet" href="{{ asset('css/landingPage.css') }}">

<h1><span style="font-weight: 800">SMART</span><span style="font-weight: 200">CAMPUS</span></h1>

{% if error %}
    <div class="alert alert-danger fixed-bottom my-0">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<div class="page-wrapper d-flex align-items-center justify-content-center">
    <div class="mx-4 col" style="text-align: center; max-width: 500px">
        <h2>VOUS ETES TECHNICIEN OU CHARGE DE MISSION ?</h2>
        <p>IDENTIFIEZ VOUS POUR ADMINISTRER LES INSTALLATIONS</p>

        <form action="{{ path('app_index') }}" method="post">
            <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Identifiant" required>
            <input type="password" id="password" name="_password" placeholder="Mot de passe" required>
            <button type="submit">SE CONNECTER</button>
        </form>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Acceuil | SmartCampus{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{# <link rel="stylesheet" href="{{ asset('css/adminDashboard.css') }}"> #}


{% if error %}
    <div class="alert alert-danger fixed-bottom my-0">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="page-wrapper d-inline-flex">

    <div class="content">
        <div class="panel">
            <h2>Envoyer une alerte</h2>
            {{ form_start(form) }}
            {{ form_widget(form.room, {'attr': {'class': 'form-control my-1'}}) }}
            {{ form_widget(form.text, {'attr': {'class': 'form-control my-1'}}) }}
            <button type="submit">Envoyer</button>
            {{ form_end(form) }}

            {# {{form(form)}} #}
        </div>
    </div>  

</div>

{% endblock %}